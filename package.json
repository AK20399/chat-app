{
    "name": "chat-app",
    "private": true,
    "version": "1.0.0",
    "devDependencies": {
        "lerna": "^4.0.0",
        "husky": "^7.0.4",
        "eslint": "^8.10.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.25.4",
        "lint-staged": "^12.3.7",
        "prettier": "^2.5.1"
    },
    "scripts": {
        "install-frontend": "cd ./packages/frontend && npm install",
        "install-backend": "cd ./packages/backend && npm install",
        "postinstall": "npm run install-frontend && npm run install-backend",
        "start": "lerna run build --scope=frontend && lerna run start",
        "test": "lerna run test",
        "dev": "lerna run dev",
        "prepare": "husky install",
        "clean": "lerna clean",
        "bootstrap": "lerna bootstrap"
    },
    "lint-staged": {
        "packages/**/*.{js,jsx,ts,tsx,css}": [
            "prettier --write",
            "eslint --fix",
            "git add"
        ]
    }
}
