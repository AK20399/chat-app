{
    "name": "root",
    "private": true,
    "version": "1.0.0",
    "devDependencies": {
        "lerna": "^4.0.0"
    },
    "scripts": {
        "install": "lerna run install",
        "start": "lerna run build --scope frontend && lerna bootstrap --hoist && lerna clean -y && lerna run start",
        "test": "lerna run test",
        "dev": "lerna run dev",
        "prepare": "husky install",
        "clean": "lerna clean",
        "bootstrap": "lerna bootstrap"
    },
    "lint-staged": {
        "packages/**/*.{js,jsx,ts,tsx,css}": [
            "prettier --write",
            "eslint --fix",
            "git add"
        ]
    }
}
